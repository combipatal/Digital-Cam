{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Verilog compile, vvp, gtkwave",
            "type": "shell",
            "command": "${fileDirname}\\.vscode\\verilog.bat",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Iverilog",
            "type": "shell",
            "command": "iverilog",
            "args": [
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.vvp",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "VVP",
            "type": "shell",
            "command": "vvp",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.vvp"
            ],
            "group": "none",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "GTKwave",
            "type": "shell",
            "command": "gtkwave",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.vcd"
            ],
            "group": "none",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}